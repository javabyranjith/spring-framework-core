<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <!-- BeanPostProcessor Example -->
  <bean id="beanPostProcessor" class="jbr.springcore.bean.postprocessor.MyBeanPostProcessor" />
  <bean id="email" class="jbr.springcore.bean.postprocessor.Email" init-method="init" destroy-method="destroy">
    <property name="message" value="Dear Sekar, You have got a Email!!!" />
  </bean>

</beans>
